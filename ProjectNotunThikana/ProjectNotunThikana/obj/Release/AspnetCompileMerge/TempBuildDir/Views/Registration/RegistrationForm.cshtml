    <div class="container">
        <form action="RegistrationForm" method="POST" class="form-horizontal" >
            <h2>Registration Form</h2>
            <div class="form-group">
                <label for="firstName" class="col-sm-3 control-label">Full Name</label>
                <div class="col-sm-9">
                    <input type="text" name="name" id="firstName" placeholder="Full Name" value="@Model.Name" class="form-control" autofocus>
                    <span class="help-block">Last Name, First Name, eg.: Smith, Harry</span>
                </div>
            </div>
        @{ 
            if (Session["Email"] == null)
            {
            <div class="form-group">
                <label for="email" class="col-sm-3 control-label">Email</label>
                <div class="col-sm-9">
                    <input type="email" name="mail" id="email" placeholder="Email" value="" class="form-control" >
                </div>
            </div>
            }

            }








            <div class="form-group">
                <label for="phonenumber" class="col-sm-3 control-label">Phone Number</label>
                <div class="col-sm-9">
                    <input type="text" name="phnNum" id="number" placeholder="Phoner Number" value="@Model.PhnNum" class="form-control">
                </div>
            </div>


            @{ 
                if (Session["Email"] == null)
                {
            <div class="form-group">
                <label for="birthDate" class="col-sm-3 control-label">Date of Birth</label>
                <div class="col-sm-9">
                    <input type="date" name="Date" id="birthDate" value="@Model.Dob" class="form-control">
                </div>
            </div>
                }
                }

            <div class="form-group">
                <label for="birthDate" class="col-sm-3 control-label">Address</label>
                <div class="col-sm-9">
                    <input type="text" name="Address"  value="@Model.Address" class="form-control">
                </div>
            </div>


           
            <div class="form-group">
                <label for="country" class="col-sm-3 control-label">Current City</label>
                <div class="col-sm-9">
                    <select name="city" id="country" class="form-control">
                        @{ 
                            try
                            {
                                if (Model.City.Contains("Dhaka"))
                                {
                        <option value="Dhaka">Dhaka</option>
                        <option value="Chitagong">Chitagong</option>
                        <option value="Barisal">Barisal</option>
                                }
                                else if (Model.City.Contains("Chitagong"))
                                {
                                <option value="Chitagong">Chitagong</option>
                                <option value="Dhaka">Dhaka</option>
                                <option value="Barisal">Barisal</option>
                                }
                                else if (Model.City.Contains("Barisal"))
                                {
                                <option value="Barisal">Barisal</option>
                                <option value="Chitagong">Chitagong</option>
                                <option value="Dhaka">Dhaka</option>

                                }
                            }
                            catch (Exception e)
                            {
                                <option value="Dhaka">Dhaka</option>
                                <option value="Chitagong">Chitagong</option>
                                <option value="Barisal">Barisal</option>
                            }

                        }

                    </select>
                </div>
            </div> <!-- /.form-group -->

            @{ 
                if (Session["Email"] == null) { 
            <div class="form-group">
                <label for="country" class="col-sm-3 control-label">User</label>
                <div class="col-sm-9">
                    <select name="User" id="country" class="form-control">

                        @{ 
                            try
                            {
                                if (Model.User.Contains("Land Owner"))
                                {
                        <option value="Land Owner">LandOwner</option>
                        <option value="Rental">Rental</option>
                                }
                                else if (Model.User.Contains("Rental"))
                                {
                                <option value="Rental">Rental</option>
                                <option value="Land Owner">LandOwner</option>

                                }
                            }
                            catch (Exception e)
                            {
                                <option value="Land Owner">LandOwner</option>
                                <option value="Rental">Rental</option>
                            }
                        }


                    </select>
                </div>
            </div> <!-- /.form-group -->
                            }
                            }

           @{ 
               if (Session["Email"] == null) {
            <div class="form-group">
                <label for="phonenumber" class="col-sm-3 control-label">Password</label>
                <div class="col-sm-9">
                    <input type="password" name="password"  placeholder="password" value="@Model.Password" class="form-control">
                </div>
            </div>
               }
               }

           


           @{ 
               String op = "";
               if (Session["Email"] == null)
               {
                   op = "Registration";
               }
               else
               {
                   op = "Update Info";
               }
            <div class="form-group">
                <div class="col-sm-9 col-sm-offset-3">
                    <button type="submit" class="btn btn-primary btn-block">@op</button>
                </div>
            </div>
               }
