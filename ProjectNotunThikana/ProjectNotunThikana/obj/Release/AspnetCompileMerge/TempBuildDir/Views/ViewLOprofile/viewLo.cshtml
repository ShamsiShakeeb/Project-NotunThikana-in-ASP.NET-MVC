@model ProjectNotunThikana.Models.ViewProfile
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>viewLo</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,400i,600,700|Raleway:300,400,400i,500,500i,700,800,900" rel="stylesheet">
    <!-- Bootstrap CSS File -->
    <link href="~/Content/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Libraries CSS Files -->
    <link href="~/Content/lib/nivo-slider/css/nivo-slider.css" rel="stylesheet">
    <link href="~/Content/lib/owlcarousel/owl.carousel.css" rel="stylesheet">
    <link href="~/Content/lib/owlcarousel/owl.transitions.css" rel="stylesheet">
    <link href="~/Content/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/Content/lib/venobox/venobox.css" rel="stylesheet">

    <link href="~/Content/css/nivo-slider-theme.css" rel="stylesheet">

    <link href="~/Content/css/style.css" rel="stylesheet">

    <link href="~/Content/css/responsive.css" rel="stylesheet">

</head>
<body>
    



    @{


        if (Session["User"].ToString().Contains("Rental")) {

            Model.count= Model.mail.Length;

        }
        else if (Session["User"].ToString().Contains("Land Owner"))
        {
            Model.count= 1;
        }
        for (int i = 0; i < Model.count; i++)
        {
    <div id="portfolio" class="portfolio-area area-padding fix">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                     
                    <div class="section-headline text-center">
                        @{ 
                            if (Session["User"].ToString().Contains("Land Owner")) {
                               <h2>@Model.Address (@Model.FlatName)</h2>}
                                else {
                                 <h2> @Model.Address (@Model.FlatNames[i]) </h2>
                                 }
                            }

                    </div>
                </div>
            </div>
            <div class="row">
                <!-- Start Portfolio -page -->
                <div class="awesome-project-1 fix">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="awesome-menu ">
                            <ul class="project-menu">
                                @{
                                    <li>
                                        @if (Session["User"].ToString().Contains("Land Owner"))
                                        {

                                            using (Html.BeginForm("UploadImage", "ViewLOprofile", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                            {
                                        <input type="file" name="file" id="file"  class="active"  value="Choose File" accept="image/*" /> 
                                                
                                                <input type="submit" value="upload image">
                                             }
                                            }
                                    </li>
                                }
                                 
                                @{ 
                                <li>
                                    @if (Session["User"].ToString().Contains("Land Owner"))
                                    {

                                    <a href="~/ProfileLO/ProfileLandOwner" data-filter=".development">Goto User</a>
                                    }
                                    else if (Session["User"].ToString().Contains("Rental"))
                                    {
                                       
                                    <a href="~/GotoUser/GotoUser?Address=@Model.Address&tailo=@Model.mail[i]" data-filter=".development">Goto User</a>
                                    }
                                </li>

                                    
                                }
                                

                            </ul>
                        </div>
                    </div>
                </div>

                <div class="post-information">
                    <div class="entry-content">
                       
                        <blockquote>
                            <p>
                                @{ 
                                    if (Session["User"].ToString().Contains("Land Owner"))
                                    {
                                         @Model.theInfo;
                                    }
                                    else if (Session["User"].ToString().Contains("Rental"))
                                    {
                                        @Model.theInfoAll[i] 
                                    }
                                 }


                            </p>
                        </blockquote>
                        
                    </div>
                    </div>

                    
                @if (Session["User"].ToString().Contains("Land Owner"))
                {

                <div class="awesome-project-content">
                    <!-- single-awesome-project start -->
                   @{ 

                       for (int j = 0; j < Model.ImgList.Count; j++)
                       {

                    <div class="col-md-4 col-sm-4 col-xs-12 design development">
                        <div class="single-awesome-project">
                            <div class="awesome-img">
                                <a href="#"><img src="~/Content/NotunThikanaFile/@Model.ImgList[j]" alt="" /></a>
                                <div class="add-actions text-center">
                                    <div class="project-dec">
                                        <a class="venobox" data-gall="myGallery" href="~/Content/NotunThikanaFile/@Model.ImgList[j]">
                                            <h4>@Session["tempFlatName"].ToString()</h4>
                                            <span>@Session["tempAddress"].ToString()</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                           }
                       }
                </div>
                }



              

                @if (Session["User"].ToString().Contains("Rental"))
                {

                    <div class="awesome-project-content">
                        <!-- single-awesome-project start -->
                        

                            @for (int j = 0; j < Model.RentalimgList[i].Count; j++)
                            {
                               

                                <div class="col-md-4 col-sm-4 col-xs-12 design development">
                                    <div class="single-awesome-project">
                                        <div class="awesome-img">
                                            <a href="#"><img src="~/Content/NotunThikanaFile/@Model.RentalimgList[i][j]" alt="" /></a>
                                            <div class="add-actions text-center">
                                                <div class="project-dec">
                                                    <a class="venobox" data-gall="myGallery" href="~/Content/NotunThikanaFile/@Model.RentalimgList[i][j]">
                                                        <h4>@Model.Address</h4>
                                                        <span></span>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                              }
                            
                    </div>
                            }

                        <!-- single-awesome-project end -->
                        <!-- single-awesome-project start -->
                        
                        <!-- single-awesome-project end -->
                        <!-- single-awesome-project start -->
                       
                        <!-- single-awesome-project end -->
                        <!-- single-awesome-project start -->
                       
                        <!-- single-awesome-project end -->
                        <!-- single-awesome-project start -->
                        
                        <!-- single-awesome-project end -->
                        <!-- single-awesome-project start -->
                       
                        <!-- single-awesome-project end -->
                    
                </div>
        </div>
    </div>
                                        }
                                    }



</body>
</html>
